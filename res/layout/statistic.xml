  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="How much calories have I taken today?"></TextView>
